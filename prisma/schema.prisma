generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String
  username  String   @unique
  password  String?
  createdAt DateTime @default(now())

  punchcard          String @default("Im a helpful AI assistant, ready to serve your needs.")
  notesvisibility    Boolean @default(false)
  activityvisibility Boolean @default(false)
  level              Int @default(1)
  
  // Relations
  notes Note[]
  todos Todo[]
}

model Note {
  id          String   @id @default(cuid()) // Primary Key
  userId      String  // Foreign Key
  title       String
  description String?
  content     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relation
  user User @relation(fields: [userId], references: [id])
}

model Todo {
  id        String      @id @default(cuid()) // Primary Key
  userId    String // Foreign Key
  slots     TimeSlot[]

  // Relation
  user      User        @relation(fields: [userId], references: [id])
}

model TimeSlot {
  id        String      @id @default(cuid()) // Primary Key
  todoId    String   // Foreign Key
  period    Period   // enum: Morning, Noon, Evening
  text      String?
  completed Boolean @default(false)

  // Relation
  todo     Todo     @relation(fields: [todoId], references: [id])
}

enum Period {
  Morning
  Noon
  Evening
}
